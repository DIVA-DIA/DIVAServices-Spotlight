// HEADER
header#header(ng-include="'layout/partials/header.html'")

// Left panel : Navigation area
// Note: This width of the aside area can be adjusted through LESS variables
aside#left-panel
  span(ng-include="'layout/partials/left-panel.html'")

// MAIN PANEL
#main(role='main')
  // RIBBON
  #ribbon(ng-include="'layout/partials/ribbon.html'")

  // ALERTS
  .alert-wrapper
    alert(ng-repeat='alert in alerts', type='{{alert.type}}', close='alert.close()')
      span.alert-type {{ alert.type }}:
      span.alert-message {{ alert.msg }}

    // MAIN CONTENT
  #content.view-animate(ui-view='')

// PAGE FOOTER
.page-footer
  span(ng-include="'layout/partials/footer.html'")
