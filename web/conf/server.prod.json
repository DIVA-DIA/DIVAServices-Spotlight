{
  "logger": [
    {
      "type": "file",
      "filename": "logs/server.log",
      "maxLogSize": 10485760,
      "backups": 5
    },
    {
      "type": "console"
    }
  ],
  "poller": {
    "run": true,
    "interval": 60000,
    "rootUrl": "http://localhost:8081",
    "retries": 7
  },
  "parser": {
    "mandatoryFields": ["name", "url"]
  },
  "pusher": {
    "run": true
  },
  "mongoDB": {
    "url": "localhost:27017/dia?auto_reconnect"
  }
}
