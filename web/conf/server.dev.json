{
  "logger": [
    {
      "type": "file",
      "filename": "logs/server.log",
      "maxLogSize": 10485760,
      "backups": 5
    },
    {
      "type": "console"
    }
  ],
  "poller": {
    "run": true,
    "interval": 3600000,
    "rootUrl": "http://localhost:8081",
    "retries": 7
  },
  "parser": {
    "mandatoryFields": ["name", "url"]
  },
  "pusher": {
    "run": true
  },
  "mongoDB": {
    "url": "localhost:27017/dia?auto_reconnect"
  },
  "session": {
    "secret": "Psst don't tell others",
    "resave": false,
    "saveUninitialized": true,
    "rolling": true,
    "maxAge": 1800000
  },
  "web": {
    "socket": {
      "run": true
    },
    "uploader": {
      "destination": "./public/uploads/"
    },
    "dropzone": {
      "addRemoveLinks" : true,
      "maxFilesize": 1,
      "maxFiles": 10
    }
  }
}
