{
  "logger": {
    "appenders": [
      {
        "type": "file",
        "filename": "logs/server.log",
        "maxLogSize": 2048000,
        "backups": 5
      },
      {
        "type": "console"
      }
    ],
    "level": "TRACE"
  },
  "poller": {
    "run": true,
    "interval": 3600000
  },
  "loader": {
    "retries": 7
  },
  "pusher": {
    "run": true
  },
  "mongoDB": {
    "url": "localhost:27017/dia_dev?auto_reconnect"
  },
  "session": {
    "secret": "Psst don't tell others",
    "resave": true,
    "saveUninitialized": true,
    "rolling": true,
    "maxAge": 7200000
  },
  "mongoStore": {
    "defaultOptions": {
      "host": "127.0.0.1",
      "port": 27017,
      "autoReconnect": true,
      "ssl": false,
      "w": 1,
      "collection": "sessions",
      "stringify": true,
      "hash": false,
      "ttl": 7200000,
      "autoRemove": "interval",
      "autoRemoveInterval": 60000
    }
  },
  "server": {
    "timeout": 600000,
    "maxFileSize": 20971520
  }
}
